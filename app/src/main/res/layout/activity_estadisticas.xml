<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".estadisticas">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:background="@color/purple_200">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estadisticas"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="60px"
            android:textColor="@color/white"
            />
    </FrameLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_stats"
        android:layout_gravity="center|top"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="<"
            android:textColor="@color/black"
            android:layout_weight="0"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/colores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/tiempos_actualizacion"
            android:layout_weight="1"
            android:text="03 Mayo"
            android:textAlignment="center"
            android:textSize="20dp"
            />

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="@color/black"
            android:layout_weight="0"
            android:textSize="18dp"
            android:layout_marginRight="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=" Horario"
            android:textSize="18dp"
            android:layout_weight="0"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text=" 02:00PM - 06:00PM"
            android:textSize="18dp"
            android:layout_weight="0"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=" Tiempo de uso"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text=" 2h 36m 6s"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=" Ciclos de ventilación"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text=" 5 ciclos"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=" Temperatura promedio"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text=" 25°C"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text=" Consumo"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text=" 125Wh"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:textAlignment="textEnd"
            />
    </LinearLayout>

</LinearLayout>