<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Inicio">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/purple_200">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:drawableStart="@drawable/ic_thermostat"
            android:drawableTint="@color/white"
            android:text="Temperatura actual"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="27°C"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="70dp" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistema apagado"
            android:textAlignment="center"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="35dp"
            android:src="@drawable/fan" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:text="El sistema se encenderá automaticamente a los 30°C"
            android:textAlignment="center"
            android:textSize="20dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/ic_stats"
            android:drawablePadding="2dp"
            android:padding="15dp"
            android:text="Estadisticas" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="2dp"
            android:padding="15dp"
            android:text="Configurar" />
    </FrameLayout>


</LinearLayout>